<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    android:id="@+id/cardLanguage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relFarsi"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/iran"
            android:layout_width="55dp"
            android:layout_height="40dp" />
        <com.example.admin.cointoss.MyTextView
            android:id="@+id/txtFarsi"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="فارسی"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/relEng"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/eng"
            android:layout_width="55dp"
            android:layout_height="40dp" />
        <com.example.admin.cointoss.MyTextView
            android:id="@+id/txtEnglish"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="English"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/relSpain"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/spain"
            android:layout_width="55dp"
            android:layout_height="40dp" />
        <com.example.admin.cointoss.MyTextView
            android:id="@+id/txtSpanish"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Español"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/relGerman"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/german"
            android:layout_width="55dp"
            android:layout_height="40dp" />
        <com.example.admin.cointoss.MyTextView
            android:id="@+id/txtGerman"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Deutsche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/dark_gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:id="@+id/relFrench"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="false"
            android:focusable="false"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:src="@drawable/france"
            android:layout_width="55dp"
            android:layout_height="40dp" />
        <com.example.admin.cointoss.MyTextView
            android:id="@+id/txtFrench"
            android:clickable="false"
            android:focusable="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="français"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>